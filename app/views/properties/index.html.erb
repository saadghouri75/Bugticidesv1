<%#= link_to 'New Property', new_property_path %>


<div class="services-top-grids">
  <div class="container">
    <div class="services-wel wel-head text-center">
      <h3><span>P</span>roperties</h3>
      <p>
        Sort properties by: 
        <% css_class_date = @active =='date' ? "active_sort" : "" %>
        <% css_class_price = @active =='price' ? "active_sort" : "" %>
        <%= link_to 'Date', properties_path(:order => 'date'), :class => "#{css_class_date}" %> 
        <%= link_to 'Price', properties_path(:order => 'price'), :class => "#{css_class_price}" %>
      </p>
    </div>
    <div class="service-grids">
      <% @properties.each do |property| %>
        <div class="col-md-4 service-grid">
          <%= image_tag property.image %>
          <h3><%= property.title %></h3>
          <p><%= property.description %></p>
          <%= link_to 'View', property, :class => 'viewmore-s' %>
        </div>
      <% end %>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>