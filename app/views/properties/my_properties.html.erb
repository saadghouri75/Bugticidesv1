<div class="services-top-grids">
  <div class="container">
    <div class="services-wel wel-head text-center">
      <h3><span>P</span>roperties</h3>
      <p>Below is the listing of your properties</p>
    </div>
    <div class="service-grids">
      <% @properties.each do |property| %>
        <div class="col-md-4 service-grid">
          <%= image_tag property.image %>
          <h3><%= property.title %></h3>
          <p><%= property.description %></p>
          <%= link_to 'View', property, :class => 'viewmore-s' %>
          <%= link_to 'Delete', property, :class => 'viewmore-s', method: :delete, data: { confirm: 'Are you sure?' } %>
          <% if property.status == 'open' %>
            <%= link_to 'Mark as sold', sold_property_path(property), :class => 'viewmore-s', method: :post, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      <% end %>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>