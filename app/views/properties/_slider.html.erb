<div class="container">
<div id="main_area">
        <!-- Slider -->
        <div class="row">
            <div class="col-xs-12" id="slider">
                <!-- Top part of the slider -->
                <div class="row">
                    <div class="col-sm-8" id="carousel-bounding-box">
                        <div class="carousel slide" id="myCarousel">
                            <!-- Carousel items -->
                            <div class="carousel-inner">
                                <div class="active item" data-slide-number="0">
                                <%= image_tag @property.image, :class => 'slider_image' %></div>

                                <div class="item" data-slide-number="1">
                                <%= image_tag @property.image2, :class => 'slider_image' %></div>

                                <div class="item" data-slide-number="2">
                                <%= image_tag @property.image3, :class => 'slider_image' %></div>

                                <div class="item" data-slide-number="3">
                                <%= image_tag @property.image4, :class => 'slider_image' %></div>

                            </div><!-- Carousel nav -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>                                       
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>                                       
                            </a>                                
                            </div>
                    </div>

                    <div class="col-sm-4" id="carousel-text"></div>

                </div>
            </div>
        </div><!--/Slider-->

        <div class="row hidden-xs" id="slider-thumbs">
                <!-- Bottom switcher of slider -->
                <ul class="hide-bullets">
                    <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-0"><%= image_tag @property.image, :class => 'slider_image_thumb' %></a>
                    </li>

                    <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-1"><%= image_tag @property.image2, :class => 'slider_image_thumb' %></a>
                    </li>

                    <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-2"><%= image_tag @property.image3, :class => 'slider_image_thumb' %></a>
                    </li>

                    <li class="col-sm-2">
                        <a class="thumbnail" id="carousel-selector-3"><%= image_tag @property.image4, :class => 'slider_image_thumb' %></a>
                    </li>

                </ul>                 
        </div>
</div>
</div>